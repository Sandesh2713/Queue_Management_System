.app {
  max-width: 1200px;
  margin: 0 auto;
  padding: 32px 20px 60px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.app-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
}

.eyebrow {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: #6b7280;
}

.lede {
  color: #4b5563;
  margin-top: 4px;
}

.view-toggle {
  display: inline-flex;
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  overflow: hidden;
}

.view-toggle button {
  border: none;
  background: #f9fafb;
  padding: 10px 14px;
  font-weight: 600;
  cursor: pointer;
}

.view-toggle button.active {
  background: #111827;
  color: #fff;
}

.layout {
  display: grid;
  grid-template-columns: 320px 1fr;
  gap: 16px;
}

.panel {
  background: #fff;
  border: 1px solid #e5e7eb;
  border-radius: 14px;
  padding: 18px;
  display: flex;
  flex-direction: column;
  gap: 16px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);
}

.panel-header {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  align-items: center;
}

.panel-section {
  border-top: 1px solid #e5e7eb;
  padding-top: 12px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.office-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.office-card {
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  text-align: left;
  padding: 10px 12px;
  cursor: pointer;
  background: #f9fafb;
}

.office-card.selected {
  border-color: #111827;
  background: #eef2ff;
}

.office-name {
  font-weight: 700;
}

.office-service {
  color: #4b5563;
  font-size: 14px;
}

.office-meta {
  display: flex;
  gap: 10px;
  font-size: 13px;
  color: #6b7280;
  margin-top: 4px;
}

.stat-group {
  display: flex;
  gap: 12px;
}

.stat {
  min-width: 110px;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid #e5e7eb;
  background: #f9fafb;
}

.stat-label {
  display: block;
  font-size: 12px;
  color: #6b7280;
}

.stat-value {
  font-size: 18px;
  font-weight: 700;
  color: #111827;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.field input,
.field textarea {
  width: 100%;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid #e5e7eb;
  font-size: 14px;
}

.field-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 10px;
}

.button-row {
  display: flex;
  gap: 10px;
}

button {
  border: none;
  background: #111827;
  color: #fff;
  border-radius: 10px;
  padding: 10px 14px;
  font-weight: 700;
  cursor: pointer;
}

button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

button.ghost {
  background: #f3f4f6;
  color: #111827;
  border: 1px solid #e5e7eb;
}

button.ghost.danger {
  color: #b91c1c;
}

.message {
  background: #ecfeff;
  border: 1px solid #06b6d4;
  padding: 12px;
  border-radius: 10px;
  color: #0f172a;
}

.muted {
  color: #6b7280;
  font-size: 14px;
}

.token-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.token-row {
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
  background: #f9fafb;
}

.token-label {
  font-weight: 700;
}

.token-meta {
  color: #6b7280;
  font-size: 14px;
}

.token-actions {
  display: flex;
  gap: 6px;
  align-items: center;
}

.token-chip {
  padding: 6px 10px;
  border-radius: 20px;
  background: #eef2ff;
  color: #312e81;
  font-weight: 700;
  font-size: 12px;
}

.panel h3 {
  margin: 0;
}

.panel h4 {
  margin: 0;
}

.panel-header h3 {
  margin: 0;
}

@media (max-width: 960px) {
  .layout {
    grid-template-columns: 1fr;
  }

  .app-header {
    flex-direction: column;
  }
}
